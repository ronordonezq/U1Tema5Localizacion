<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <fragment
        android:id="@+id/mapa"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnmiubi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:onClick="miubicacion"
            android:text="Ubicacion"/>
        <Button
            android:id="@+id/btnseguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:onClick="Seguir"
            android:text="OFF seguir"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnFusedLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:onClick="fusedlocation"
            android:text="Fused Location"/>
        <Button
            android:id="@+id/btnFusedLocationClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"

            android:textColor="#fff"
            android:layout_gravity="center"
            android:onClick="fusedlocationClient"
            android:text="Fused Location Client"/>
    </LinearLayout>
</LinearLayout>